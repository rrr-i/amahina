
// メインコンテンツ
main
  display block
  width 100%
#main-content
  padding 100px 0  0 0
  // スライダー
  #slidewrap
    width 100%
    height auto
    overflow hidden
  #slider
    position relative
    display flex
    align-items center
    flex-wrap nowrap
    width 300%
    .imgbox
      width 100%
      height auto
      background $yellow
      img
        width 100%
    .imgbox:nth-child(2)
      background red
    .imgbox:nth-child(3)
      background blue
h2.section-title
  position relative
  display block
  width 250px
  margin 0 auto
  background $yellow
  font-size 2em
  text-align center
  z-index 10
// ニュースコンテンツ
main section
  width 100%
  padding 50px 0 20px 0
#characters-content
  .character_box
    display block
    width 100%
    margin 40px 0 0 0
    figure
      width 100%
      text-align center
      img
        width 80%
    figcaption
      width 90%
      margin 0 auto
      font-size 14px
#news-content
  ul
    width 90%
    margin -10px auto 0
    padding 30px 25px 20px
    border 4px double $red
    box-sizing border-box
    li
      font-size 14px
      margin-bottom 10px
      letter-spacing 0.05em
      line-height 1.75em
      text-align left
      list-style-type none
    li::before
      font-family "Font Awesome 5 Free"
      content "\f044"
      margin 0 4px 0 0
      font-weight 900
      font-size 12px
      color $red
    li:first-child::before
      content "新着!"
      margin 0 4px 0 0
      color $red
      font-size 12px
      border-bottom 4px double $red
