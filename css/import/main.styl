body
  background $white
  -webkit-font-smoothing antialiased

// メインコンテンツ
main
  display block
  width 100%
#main-content
  width 100%
  margin 0 auto
  // スライダー
  #slidewrap
    width 100%
    height auto
    overflow hidden
  #slider
    position relative
    display flex
    align-items center
    flex-wrap nowrap
    width 300%
    .imgbox
      width 100%
      height auto
      background $yellow
      img
        width 100%
    .imgbox:nth-child(2)
      background red
    .imgbox:nth-child(3)
      background blue
.top-content
  position relative
  width 100%
  height 700px
  margin 0 auto
  background linear-gradient(50deg, $yellow 55%,transparent 45%)
  .top-content-bg
    position absolute
    top 20%
    left 0
    right 0
    width 100%
    height 700px
    background linear-gradient(-15deg, $yellow 30%,$white 30%)
    z-index -1
  p.bigtext
    position absolute
    top 15%
    left 0
    right 0
    background linear-gradient(0deg,$red 15%, transparent 15%)
    letter-spacing: -10px
    font-size 10em
    font-style italic
    font-family "font-catch"
    transform rotate(-10deg)
    z-index 100
    span
    font-size 1.8em
  p.captext
    position absolute
    top 70%
    left 0
    font-size 3em
    span
      font-size 1.4em
      border-bottom 10px double $red
  &-inner
    position relative
    width 1200px
    height 700px
    margin 0 auto
    padding 50px 0 0 0
    box-sizing border-box
    p
      font-size 3.5em
      font-style normal
      font-family "font-catch"
  .top-content-imgbox
    position absolute
    top -6%
    right 0
    .top-content-img img
      width 450px
    .top-content-img.ama img 
      margin -350px 0 0 80px
    figure
      position relative
      figcaption
        position absolute
        top 70px
        right 0px
        color #464646
        font-size .9em
    .top-content-img.hima figcaption
        top 200px
        right 110px

.section-wrap
  width 100%
  height auto
  margin 0 auto
  background $white
.characters-content
  position relative
  width 1100px
  margin 0 auto 0
  .character_box
    width 70%
    figure
      width 100%
      img
        width 100%
    figcaption
      width 100%
      margin 0 auto
      font-size 1em
  .ama
    margin-left auto
  .hima
    margin-right auto
    img
      margin-top -150px

h2.amari-title,
h2.himari-title
  display block
  color $black
  font-size 10em
  font-weight bold
  text-align left
  z-index 10
  font-family "font"
.ama-inner
  position absolute
  top 0
  ul
    margin-top 20px
    font-family "font"
    li
      font-size 2.8em
      line-height 1.75em
      list-style-type none
  .twitter-sns a
    display block
    width 50px
    line-height 50px
    background $red
    color $white
    font-size: 1.1em
    text-align center
    border-radius 50%
    text-decoration none
.hima-inner
  @extends .ama-inner
  right 0
  ul
    margin-top 140px
    margin-left 30px
  .twitter-sns a
    margin-left 30px
  h2
    text-align right
  

// ニュースコンテンツ
#news-content
  position relative
  ul
    width 90%
    margin -10px auto 0
    padding 30px 25px 20px
    border 4px double $red
    box-sizing border-box
    li
      font-size 14px
      margin-bottom 10px
      letter-spacing 0.05em
      line-height 1.75em
      text-align left
      list-style-type none
    li::before
      font-family "Font Awesome 5 Free"
      content "\f044"
      margin 0 4px 0 0
      font-weight 900
      font-size 12px
      color $red
    li:first-child::before
      content "新着!"
      margin 0 4px 0 0
      color $red
      font-size 12px
      border-bottom 4px double $red
