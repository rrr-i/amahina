body
  // background $yellow
  -webkit-font-smoothing antialiased

// メインコンテンツ
main
  display block
  width 100%
#main-content
  width 1100px
  margin 0 auto
  padding 100px 0  0 0
  // スライダー
  #slidewrap
    width 100%
    height auto
    overflow hidden
  #slider
    position relative
    display flex
    align-items center
    flex-wrap nowrap
    width 300%
    .imgbox
      width 100%
      height auto
      background $yellow
      img
        width 100%
    .imgbox:nth-child(2)
      background red
    .imgbox:nth-child(3)
      background blue

main section
  width 100%
  padding 50px 0 20px 0
.characters-content
  position relative
  margin-top 60px
  .character_box
    width 70%
    figure
      position relative
      width 100%
      z-index 100
      img
        width 100%
    figcaption
      width 100%
      margin 0 auto
      font-size 1em
  .ama
    margin-left auto
  .hima
    margin-right auto
    img
      margin-top -150px

h2.amari-title,
h2.himari-title
  display block
  color $black
  font-size 12em
  font-weight bold
  text-align left
  z-index 10
  font-family "font"
.ama-inner
  position absolute
  top 0
  ul
    margin-top 20px
    font-family "font"
    li
      font-size 2.8em
      line-height 1.75em
      list-style-type none
  .twitter-sns a
    display block
    width 150px
    line-height 40px
    background $red
    text-align center
    border-radius 20px
.hima-inner
  @extends .ama-inner
  right 0
  ul
    margin-top 140px
    margin-left 30px
  h2
    text-align right

// ニュースコンテンツ
#news-content
  position relative
  ul
    width 90%
    margin -10px auto 0
    padding 30px 25px 20px
    border 4px double $red
    box-sizing border-box
    li
      font-size 14px
      margin-bottom 10px
      letter-spacing 0.05em
      line-height 1.75em
      text-align left
      list-style-type none
    li::before
      font-family "Font Awesome 5 Free"
      content "\f044"
      margin 0 4px 0 0
      font-weight 900
      font-size 12px
      color $red
    li:first-child::before
      content "新着!"
      margin 0 4px 0 0
      color $red
      font-size 12px
      border-bottom 4px double $red
