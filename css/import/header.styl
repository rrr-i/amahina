
@import "import/hamburger.styl"

// ナビゲーション
header
  position absolute
  top 0
  width 100%
  height 175px
  z-index 1000
.header-inner
  width 1100px
  margin 0 auto
  background transparent
  transition $tra3
  box-sizing border-box
  h1
    padding 40px 0 0 0
    font-size 4em
    text-align center
    transition $tra3
    font-family "font-catch"
    a
      color $black
      text-decoration none
// ヘッダースモール
.header-small
  position fixed
  top 0
  left 0
  right 0
  width 1100px
  height 60px
  z-index 1000
  h1
    padding 20px 0 0 0
    font-size 2.5em
    transition $tra3
    font-family normal

// ナビゲーション
nav.pc_nav
  display block
  width 100%
  height auto
  margin-top 30px
  ul
    display flex
    align-items center
    justify-content space-between
    li
      width 20%
      text-align center
      a
        padding 10px
        color $black
        font-size 1em
        text-decoration none
nav.sp_nav
  display none

@media screen and (max-width: 768px)
  nav.pc_nav
    display none
  nav.sp_nav
    display block

// スライドトグルメニュー
nav.sp_nav
  position fixed
  top 100px
  display none
  width 100%
  background $white
  z-index 1000
  li
    letter-spacing 0.05em
    line-height 2.8em
    font-size 1.4em
    font-weight bold
    text-align center
    border-bottom 1px solid $black
    a
      display block
      color $black
      text-decoration none
nav.nav-small-fix
  position fixed
  top 60px
  width 100%
  background $white
#bg-black
  display none
  position fixed
  top 0
  width 100%
  height 100%
  background rgba(0,0,0,.3)
  z-index 500